@model HotelApp.Areas.Identity.Pages.Account.RegisterModel
@{ 
    ViewData["Title"] = ViewData["Title"] ?? "Register Detail"; 
}
<h2>Enter Owner detail</h2>
@if (TempData["success"] != null)
{
    <div class="error-message" style="color: green; font-weight: bold; margin-top: 10px;"> @TempData["error"] </div>
}
@if (TempData["error"] != null)
{
    <div class="error-message" style="color: red; font-weight: bold; margin-top: 10px;"> @TempData["error"] </div>
}
<form class="mx-1 mx-md-4" asp-action="RegisterDetail" method="post">
    <input type="hidden" name="registerType" value="Owner" />
    <input type="hidden" name="token" value="@ViewData["Token"]" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <label asp-for="Input.Email">Email</label>
            <input asp-for="Input.Email" class="form-control border" autocomplete="useremail" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <label asp-for="Input.Name">Name</label>
            <input asp-for="Input.Name" class="form-control border" autocomplete="name" aria-required="true" placeholder="yourname" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <label asp-for="Input.Password">Password</label>
            <input asp-for="Input.Password" class="form-control border" autocomplete="new-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control border" autocomplete="new-password" aria-required="true" placeholder="confirmpassword" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-map fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <label asp-for="Input.Address">Address</label>
            <input asp-for="Input.Address" class="form-control border" autocomplete="homeadress" aria-required="true" placeholder="address" />
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-mobile fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <label asp-for="Input.PhoneNumber">Phone</label>
            <input asp-for="Input.PhoneNumber" class="form-control border" autocomplete="phone" aria-required="true" placeholder="phonenumber" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4" style="display:none; ">
        <i class="fas fa-users fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <label asp-for="Input.Role" class="form-label"></label>
            <input type="text" class="form-control" asp-for="Input.Role" value="Owner" readonly />
            <span asp-validation-for="Input.Role" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Complete Registration</button>
</form>
