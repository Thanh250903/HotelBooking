@{
    ViewData["Title"] = "Tạo tài khoản người cho người cung cấp";
}

    
<div style="max-width: 400px; margin: 0 auto; text-align: center; font-family: Arial, sans-serif;">
    <h2 style="font-weight: bold;">Tạo tài khoản cho người cung cấp dịch vụ</h2>
    <p>Tạo tài khoản để đăng ký và quản lý chỗ nghỉ.</p>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <p style="color: red; font-weight: bold;">@ViewBag.ErrorMessage</p>
    }
    <form asp-action="SendConfirmationEmail" method="post">
        <div style="margin-bottom: 15px; text-align: left;">
            <label for="email" style="display: block; font-weight: bold;">Địa chỉ email</label>
            <input type="email" id="email" name="email" required
                   style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 16px;">
        </div>
        <button type="submit"
                style="width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 5px; font-size: 16px; font-weight: bold;">
            Tiếp tục
        </button>
    </form>

    @if (TempData["success"] != null)
    {
        <div class="error-message" style="color: green; font-weight: bold; margin-top: 10px;"> @TempData["error"] </div>
    }

    @if (TempData["error"] != null)
    {
        <div class="error-message" style="color: red; font-weight: bold; margin-top: 10px;"> @TempData["error"] </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <p style="color: green; font-weight: bold;">@ViewBag.Message</p>
    }

    <p style="margin-top: 20px; font-size: 14px;">
        Quý vị có thắc mắc về chỗ nghỉ của mình hay extranet? Hãy ghé thăm
        <a asp-controller="Home" asp-action="Privacy" style="color: #007bff; text-decoration: none;">Quyền riêng tư </a> để tìm hiểu thêm.
    </p>

    <p style="width: 100%; padding: 10px; background-color: #f1f1f1; color: #007bff; border: 1px solid #007bff; border-radius: 5px; font-size: 16px; font-weight: bold; margin-top: 10px;">
        <a asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
    </p>


    <p style="font-size: 12px; color: #777;">
        Bảo lưu mọi quyền.<br>
        Bản quyền (2024) - Booking.com™
    </p>
</div>
