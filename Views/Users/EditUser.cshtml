@using Microsoft.AspNetCore.Mvc.TagHelpers
@model HotelApp.Models.Others.ApplicationUser
    <div class="user-detail-header">
        <h3>Edit account for @Model.UserName</h3>
    </div>
    <form method="post" class="container">
        <div class="border p-4 rounded shadow-sm">
            <div class="mb-3 row">
                <input asp-for="Id" class="form-control" hidden>
                <label asp-for="Name" class="form-label"></label>
                <div class="col-sm-10">
                   <input asp-for="Name" class="form-control">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        <div class="mb-3 row">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <div class="col-sm-10">
                     <input asp-for="PhoneNumber" class="form-control">
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
            <div class="mb-3 row">
            <label asp-for="UserAddress" class="form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="UserAddress" class="form-control">
                </div>
            <span asp-validation-for="UserAddress" class="text-danger"></span>
        </div>
        </div>
        <div class="form-group" style="padding: 5px 20px">
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
            <button type="submit" class="btn" style="color: #fff;background: #346184">Submit</button>
        </div>
    </form>
