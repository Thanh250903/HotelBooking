@model HotelApp.Models.Hotel.Hotel

<h1 class="text-center my-4">Edit Hotel</h1>
<form method="post" class="container">
    <div class="border p-4 rounded shadow-sm">
        <div class="mb-3 row">
            <label asp-for="HotelName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="HotelName" class="form-control" />
                <span asp-validation-for="HotelName" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="NumberPhone" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NumberPhone" class="form-control" />
                <span asp-validation-for="NumberPhone" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="AverangeRating" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AverangeRating" class="form-control" />
                <span asp-validation-for="AverangeRating" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Lattitube" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Lattitube" class="form-control" />
                <span asp-validation-for="Lattitube" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Longitude" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
        </div>
        <div class="text-center row">
            <div class="col">
                <button type="submit" class="btn btn-primary w-100">Edit</button>
            </div>
            <div class="col">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">Back to list</a>
            </div>
            <div class="col">
                <button type="reset" class="btn btn-warning w-100">Reset all</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
