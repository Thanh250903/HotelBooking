@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@if (TempData["success"] != null)
{
    <div class="success-message" style="color: green; font-weight: bold; margin-top: 10px;"> @TempData["success"] </div>
}

@if (TempData["error"] != null)
{
    <div class="error-message" style="color: red; font-weight: bold; margin-top: 10px;"> @TempData["error"] </div>
}
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Input" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Please enter your name." />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.UserAddress" class="form-control" placeholder="Please enter your address." />
                <label asp-for="Input.UserAddress" class="form-label"></label>
                <span asp-validation-for="Input.UserAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePicture"> Upload new profile picture</label>
                <input type="file" class="form-control" name="profilePicture" id="ProfilePicture" accept="image/*" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
